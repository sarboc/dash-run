<form role="form" class="form-horizontal" id="new-thing">
  <h2><small><%= I18n.t("form-headings.personal") %></small></h2>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.name") %></label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="admin-name" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.email") %></label>
    <div class="col-sm-9">
      <input type="email" class="form-control" id="admin-email" required />
    </div>
  </div>
  <span class="help-block"><%= I18n.t("labels.payment") %></span>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.venmo") %></label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="venmo-id" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.square-cash") %></label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="square-cash" />
    </div>
  </div>
  <h2><small><%= I18n.t("form-headings.event") %></small></h2>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.title") %></label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="title" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.description") %></label>
    <div class="col-sm-9">
      <textarea class="form-control" rows="3" id="description"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.min-contribution") %></label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="min-contribution" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.date") %></label>
    <div class="col-sm-9">
      <input type="date" class="form-control" id="date" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label"><%= I18n.t("labels.time") %></label>
    <div class="col-sm-9">
      <input type="time" class="form-control" id="time" required />
    </div>
  </div>
  <input type="submit" class="btn-block btn btn-primary" value="<%= I18n.t("labels.submit") %>" />
</form>